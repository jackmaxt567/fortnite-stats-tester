<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Stats for <%= username %></title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <a href="/" class="home-button">ğŸ  Home</a>

  <div class="container">
    <h1>Stats for <%= username %> in <%= event %></h1>

    <div class="stats-table">
      <% for (let key in stats) {
     const label = key
       .replace(/([A-Z])/g, ' $1')
       .replace(/^./, str => str.toUpperCase());

     const value = stats[key];
     const formattedValue =
       typeof value === 'number'
         ? Number.isInteger(value)
           ? value
           : value.toFixed(2).replace(/\.?0+$/, '') // round to 2 decimals, strip trailing 0s
         : value;
%>
  <div class="stat-box">
    <h3><%= label %></h3>
    <p><%= formattedValue %></p>
  </div>
<% } %>


    </div>

    <form action="/" method="get">
      <button class="back-button">Try Another</button>
    </form>
  </div>
</body>
</html>
